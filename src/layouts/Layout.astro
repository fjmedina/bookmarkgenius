---
interface Props {
	title: string;
	description?: string;
}

const { title, description = "Bookmark Genius - La forma inteligente de organizar tus bookmarks" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="antialiased">
		<div class="fixed inset-0 -z-10 h-full w-full bg-white bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px]"></div>
		<header class="fixed w-full bg-white/80 backdrop-blur-lg z-50 border-b border-gray-100/50">
			<nav class="container mx-auto px-4 py-4 flex items-center justify-between">
				<a href="/" class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 text-transparent bg-clip-text">
					Bookmark Genius
				</a>
				<div class="hidden md:flex items-center gap-8">
					<a href="/features" class="text-gray-600 hover:text-blue-600 transition-colors">Funcionalidades</a>
					<a href="/pricing" class="text-gray-600 hover:text-blue-600 transition-colors">Precios</a>
					<a href="/blog" class="text-gray-600 hover:text-blue-600 transition-colors">Blog</a>
					<a href="/about" class="text-gray-600 hover:text-blue-600 transition-colors">Nosotros</a>
					<a href="https://chrome.google.com/webstore" class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-4 py-2 rounded-lg hover:opacity-90 transition-opacity">
						Descargar Extensión
					</a>
				</div>
			</nav>
		</header>

		<slot />

		<footer class="border-t border-gray-100">
			<div class="container mx-auto px-4 py-12">
				<div class="grid grid-cols-1 md:grid-cols-4 gap-8">
					<div>
						<h3 class="font-bold text-lg mb-4 bg-gradient-to-r from-blue-600 to-indigo-600 text-transparent bg-clip-text">Bookmark Genius</h3>
						<p class="text-gray-600">La forma inteligente de organizar tus bookmarks con IA.</p>
					</div>
					<div>
						<h3 class="font-bold text-lg mb-4">Producto</h3>
						<ul class="space-y-2">
							<li><a href="/features" class="text-gray-600 hover:text-blue-600 transition-colors">Funcionalidades</a></li>
							<li><a href="/pricing" class="text-gray-600 hover:text-blue-600 transition-colors">Precios</a></li>
							<li><a href="/enterprise" class="text-gray-600 hover:text-blue-600 transition-colors">Empresas</a></li>
						</ul>
					</div>
					<div>
						<h3 class="font-bold text-lg mb-4">Recursos</h3>
						<ul class="space-y-2">
							<li><a href="/blog" class="text-gray-600 hover:text-blue-600 transition-colors">Blog</a></li>
							<li><a href="/support" class="text-gray-600 hover:text-blue-600 transition-colors">Soporte</a></li>
							<li><a href="/contact" class="text-gray-600 hover:text-blue-600 transition-colors">Contacto</a></li>
						</ul>
					</div>
					<div>
						<h3 class="font-bold text-lg mb-4">Legal</h3>
						<ul class="space-y-2">
							<li><a href="/privacy" class="text-gray-600 hover:text-blue-600 transition-colors">Privacidad</a></li>
							<li><a href="/terms" class="text-gray-600 hover:text-blue-600 transition-colors">Términos</a></li>
						</ul>
					</div>
				</div>
				<div class="mt-12 pt-8 border-t border-gray-100 text-center text-gray-600">
					<p>&copy; {new Date().getFullYear()} Bookmark Genius. Todos los derechos reservados.</p>
				</div>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--blue-primary: #2563eb;
		--blue-dark: #1d4ed8;
	}
	html {
		font-family: 'Plus Jakarta Sans', system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
	}
</style>